{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2017",
        "outDir": "./dist",
        "baseUrl": "./src",
        "alwaysStrict": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "paths": {
            "@project/app/modules/*": ["src/modules/*"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
